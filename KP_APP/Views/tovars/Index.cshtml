@model IEnumerable<KP_APP.Models.tovars>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tov_kategories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tovar_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tovar_opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tov_kategories.kategor_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tovar_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tovar_opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cena)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.articule">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.articule">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.articule">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
