@model IEnumerable<KP_APP.Models.accounts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.im)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.otch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.passwordhash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.is_sotr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.im)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.otch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.passwordhash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_sotr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.login">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.login">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.login">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
