@model IEnumerable<KP_APP.Models.sost_departments>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.positions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.departments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.positions.pos_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departments.dep_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_sost_dep">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_sost_dep">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_sost_dep">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
