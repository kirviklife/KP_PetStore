@model IEnumerable<KP_APP.Models.positions>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pos_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pos_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_pos">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_pos">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_pos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
